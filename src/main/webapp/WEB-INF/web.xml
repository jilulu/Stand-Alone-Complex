<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>api.user.UserSignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>api.user.UserRegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Auth</servlet-name>
        <servlet-class>api.user.UserAuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseRecord</servlet-name>
        <servlet-class>api.purchaserecord.PurchaseRecordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignOut</servlet-name>
        <servlet-class>api.user.UserSignOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookPurchase</servlet-name>
        <servlet-class>api.book.BookPurchaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoPurchase</servlet-name>
        <servlet-class>api.purchaserecord.PurchaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseRecordDetail</servlet-name>
        <servlet-class>api.purchaserecord.PurchaseRecordDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookDetail</servlet-name>
        <servlet-class>api.book.BookDetailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/user/signin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Auth</servlet-name>
        <url-pattern>/user/auth</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PurchaseRecord</servlet-name>
        <url-pattern>/user/purchase</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SignOut</servlet-name>
        <url-pattern>/user/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookPurchase</servlet-name>
        <url-pattern>/book/confirm</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DoPurchase</servlet-name>
        <url-pattern>/book/purchase</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PurchaseRecordDetail</servlet-name>
        <url-pattern>/user/purchase/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookDetail</servlet-name>
        <url-pattern>/book/details</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
